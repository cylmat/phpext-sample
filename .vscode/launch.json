// .vscode/launch.json for VSCode
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9100,

            // MANDATORY
            "pathMappings": {
                "/var/www/<source_dir>": "${workspaceFolder}/<source_dir>"
            },
            "xdebugSettings": {
                "max_data": 65535,
                "show_hidden": 1,
                "max_children": 100,
                "max_depth": 5
            }
        }
    ]
}