FROM php:7.3-fpm

WORKDIR /appli

RUN apt-get update  && ENV=_docker_id_to_update_44636ed45899
RUN apt-get install -y git wget zip libzip4 libzip-dev bzip2 lbzip2 apt-utils g++
RUN apt-get install -y gnupg gnupg2 zlib1g-dev libicu-dev libxml2-dev

# php docker ext
RUN docker-php-ext-configure intl 
RUN docker-php-ext-install bcmath pdo pdo_mysql intl iconv gettext
RUN docker-php-ext-install sockets tokenizer session soap posix zip

# composer
ENV COMPOSER_ALLOW_SUPERUSER=1
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin
RUN mv /usr/local/bin/composer.phar /usr/local/bin/composer && composer --version