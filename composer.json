{
    "name": "root/html",
    "description": "Trying differents php-pear-pecl extensions",
    "require": {
        "php": "^7",
        "slim/php-view": "2.2",
        "slim/psr7": "1.0",
        "slim/slim": "4.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "2.16",
        "fzaninotto/faker": "1.9",
        "kint-php/kint": "3.3",
        "nunomaduro/phpinsights": "1.14",
        "phpmd/phpmd": "2.8",
        "phpunit/phpunit": "8.5",
        "slevomat/coding-standard": "6.3.8",
        "squizlabs/php_codesniffer": "3.5.5"
    },
    "config": {
        "preferred-install": "dist",
        "bin-dir": "bin",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --color=always",
        "cover": "phpunit --color=always -vvv --coverage-text - --coverage-html public/cover",
        "cover_dbg": "phpdbg -qrr vendor/phpunit/phpunit/phpunit --color=always -vvv --coverage-text - --coverage-html public/cover",
        "check": "phpcs",
        "fix": "phpcbf",
        "md": "phpmd",
        "cs-fixer": "php-cs-fixer fix src"
    },
    "extra": {
        "phalcon/cphalcon": "4.0",
        "phalcon/devtools": "4.0"
    }
}
