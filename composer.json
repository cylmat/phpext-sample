{
    "name": "root/html",
    "description": "Trying differents php-pear-pecl extensions",
    "require": {
        "php": "^7",
        "slevomat/coding-standard": "6.2",
        "slim/php-view": "^2.2",
        "slim/psr7": "^1.0",
        "slim/slim": "^4.5"
    },
    "require-dev": {
        "codeception/codeception": "^4.1",
        "fzaninotto/faker": "^1.9",
        "kint-php/kint": "^3.3",
        "phpmd/phpmd": "^2.8",
        "phpspec/phpspec": "^6.1",
        "phpunit/phpunit": "^8.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "preferred-install": "dist",
        "bin-dir": "bin",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "":"src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\":"tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check": "phpcs",
        "fix": "phpcbf",
        "md": "phpmd"
    },
    "extra": {
        "phalcon/cphalcon":"^4.0",
        "phalcon/devtools":"^4.0"
    }
}
